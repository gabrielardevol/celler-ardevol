



<div class="grid">


  <%@wines_cat[1..-1].each_with_index do |wine, index|%>

    <%if (index % 2 == 0)%>
    <%= content_tag(:div,"" ,class: "grid-image-container", style:
    "background-image: url(#{asset_path wine[:image]});background-size: contain;
   "
    ) %>
    <%end%>

    <div class="grid-padding <%= (index % 2 == 0)? "padding-right" : "padding-left"%>" style= "">
         <%= content_tag(:div,"" ,class: "small-image-container", style:
        "background-size: contain; background-image: url(#{asset_path wine[:image]});"
        ) %>
      <h2> <%=wine[:name]%></h2>

      <p>
      <%= wine[:concept]%>
      </p>


      <ul>
      <% wine[:varieties].sort_by{|key, value| value}.reverse.each do |variety|%>
      <li><%=variety[0]%>: <%=variety[+1]%>%</li>
      <% end %>
      </ul>
    </div>

    <%if (index % 2 != 0)%>
    <%= content_tag(:div,"" ,class: "grid-image-container", style:
    "background-image: url(#{asset_path wine[:image]}); background-size: contain;
   "
    ) %>
    <%end%>
  <%end%>
</div>

<div style="margin: auto;" class="background-color">

<table style="width: fit-content; margin: auto; color: white">
  <caption>El celler en dades</caption>
    <tr>
    <td>Varietats de raim</td>
    <td>garnatxa<br>  carinyena <br> syrah <br> merlot<br> cavernet sauvignon</td>
  </tr>
  <tr>
    <td>Capacitat anual en litres</td>
    <td> < 20.000</td>
  </tr>
  <tr>
    <td>Producció anual en ampolles</td>
    <td> < 30.000</td>
  </tr>


  <tr>
    <td>Extensió de vinya</td>
    <td>10ha</td>
  </tr>
  <tr>
    <td>Nombre de botes</td>
    <td>100</td>
  </tr>
  <tr>
    <td>Tipus de fusta</td>
    <td>roure francès ‘allier’</td>
  </tr>
  <tr>
    <td>Enologia</td>
    <td>Roser Amorós</td>
  </tr>
</table>

</div>
