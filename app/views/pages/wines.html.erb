<div style="padding: 1em 6em; background-color: white">
<p style="color: red">Pr√≤ximament: conceptes, puntuacions i notes de cata</p>
  <h2>El celler en dades</h2>
  <div><%=@wines_cat[0][:content]%></div>
</div>

<div class="grid">


  <%@wines_cat[1..-1].each_with_index do |wine, index|%>

    <%if (index % 2 == 0)%>
    <%= content_tag(:div,"" ,class: "grid-image-container", style:
    "background-image: url(#{asset_path wine[:image]});background-size: contain;
   "
    ) %>
    <%end%>

    <div class="grid-padding <%= (index % 2 == 0)? "padding-right" : "padding-left"%>" style= "">
         <%= content_tag(:div,"" ,class: "small-image-container", style:
        "background-size: contain; background-image: url(#{asset_path wine[:image]});"
        ) %>
      <h2> <%=wine[:name]%></h2>

      <p style="display:none">
      <%= wine[:concept]%>
      </p>


      <ul>
      <% wine[:varieties].sort_by{|key, value| value}.reverse.each do |variety|%>
      <li><%=variety[0]%>: <%=variety[+1]%>%</li>
      <% end %>
      </ul>
    </div>

    <%if (index % 2 != 0)%>
    <%= content_tag(:div,"" ,class: "grid-image-container", style:
    "background-image: url(#{asset_path wine[:image]}); background-size: contain;
   "
    ) %>
    <%end%>
  <%end%>
</div>
