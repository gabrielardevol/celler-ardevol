<div class="grid" style = "display: grid; grid-template-columns: 1fr 1fr; align-items: center;">
  <%@history_cat.each_with_index do |section, index|%>

    <%if (index % 2 == 0)%>
    <%= content_tag(:div,"" ,class: "image-container", style:
    "background-image: url(#{asset_path section[:image]});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: 100%;
    min-height: 10em"
    ) %>
    <%end%>

    <div style= "padding: 0em 2em; <%= (index % 2 == 0)? "padding-right: 6em" : "padding-left: 6em"%>">
      <h2> <%=section[:title]%></h2>

      <p class="regular-text" style = >
      <%= section[:content]%>
      </p>
    </div>

    <%if (index % 2 != 0)%>
    <%= content_tag(:div,"" ,class: "image-container", style:
    "background-image: url(#{asset_path section[:image]});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: 100%;
    min-height: 10em"
    ) %>
    <%end%>
  <%end%>
</div>
