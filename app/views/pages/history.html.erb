<script>
function changeLanguage(lang) {
  document.documentElement.lang = lang;

  document.querySelectorAll( ` [lang]:not([lang=${lang}]) ` ).forEach(element => element.style.display = "none")
document.querySelectorAll(`[lang=${lang}]`).forEach(element => {
  if (element.classList.contains('ellipse-text')) {
    element.style.display = '-webkit-box';
  } else {
    element.style.display = 'block';
  }
});
}
console.log(document.documentElement.lang)
window.onload = changeLanguage(document.documentElement.lang)
</script>
