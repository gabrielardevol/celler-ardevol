        <p class="regular-text" style = >
        <%= section[:content]%>
        </p>
        <a href="/history">Llegeix-ne m√©s</a>
      </div>

      <%if (index % 2 != 0)%>
      <%= content_tag(:div,"" ,class: "image-container", style:
      "background-image: url(#{asset_path section[:image]});
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      width: 100%;
      height: 100%;
      min-height: 10em"
      ) %>
      <%end%>
    <%end%>
